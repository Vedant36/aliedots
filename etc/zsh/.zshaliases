# Vedant36's zsh aliases
# color hmmmmmm {{{1
alias ls='ls --color-auto'
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias ip='ip --color=auto'
# Generic {{{1
alias cp='cp -i'
alias mv='mv -i'
alias watch='watch '
alias doas='doas '
alias linedo="xargs -d '\n' -I {}"
alias y='ipython --autocall=2 --nosep'
# Note: replace startx with `exec startx` if wanting to exit shell after logout. hmmm security
alias x='sx 2>&1 >~/.local/var/log/x.log'
alias path='echo $PATH | tr -s ":" "\n"'
alias pn='ping 1.1.1.1'
alias python='env PYTHONSTARTUP=$XDG_LIB_HOME/python/startup.py python'
alias cc='gcc -std=c11 -pedantic -Wall -Wextra -Wbad-function-cast -Wcast-align -Wcast-qual -Wconversion -Wfloat-equal -Wformat=2 -Wlogical-op -Wmissing-declarations -Wmissing-prototypes -Wpointer-arith -Wshadow -Wstrict-prototypes -Wwrite-strings'
# ls {{{1
alias l='ls -alhgF --group-directories-first'
alias ll='ls -lh --time-style=long-iso'
alias ls='ls -A --color=auto --quoting-style=literal'
alias lt='ll -t'
# doas {{{1
alias sudo='doas'
alias sudoedit='doas nvim'
alias se='doas nvim'
# contractions {{{1
alias e=echo
alias s=doas
alias m=man
alias f=find
alias v=nvim
alias c='bat --paging=never'
alias n=neofetch
# Git {{{1
alias g='git'
alias ga='git add'
alias gc='git commit'
alias gcv='git commit -v'
alias gd='git diff'
alias gds='git diff --staged'
alias gl='git log'
alias gls='git ls-files'
alias gm='git mv'
alias gp='git push'
alias gpf='git push -f'
alias gr='git restore'
alias grs='git restore --staged'
alias gs='git status'
alias gwc='git diff | wc -l'
alias gh='git add . && git commit && git push'
# Global {{{1
alias -g noerr='2>/dev/null'
alias -g A='| awk'
alias -g C='| ccze -A'
alias -g CU='| cut'
# alias -g D='| dc'
# alias -g E='| echo'
# alias -g E='| envsubst'
alias -g F='| fzf' # 129
alias -g G='| rg' # 154 # is need for a seperate on for rg -v # 27
alias -g H='| xxd' # 26
alias -g J='| jq' # 26
alias -g L='| less +F'
alias -g N='| nl'
alias -g O='| sort' # 13
alias -g P='| pee'
alias -g S='| sed' # 32
alias -g T='| tr' # 36
alias -g V='| nvim' # 114
alias -g W='| wc -l' # 22
alias -g WR='| wc' # 6
alias -g X='| xargs' # 60 overrides /bin/X
alias -g Y='| py -l' # 17
alias -g Z='| tail'
# xsel/xclip {{{1
alias xip='xsel -ip'
alias xop='xsel -op'
alias xib='xsel -ib'
alias xob='xsel -ob'
# pacman aliases {{{1
alias p='$PM'
alias pf='$PM -F'
alias pg='$PM -S'
alias pp='$PM -Rcns'
alias pi='$PM -S'
alias pq='$PM -Si'
# changing directory conveniences {{{1
alias cb='cd ~/.local/bin'
alias cl='cd ~/dox/CPlus'
alias ct='cd ~/dox/textfiles/'
alias cy='cd ~/dox/Python'
alias cx='cd ~/dox'
alias cz='cd $ZDOTDIR'
# vim editing files {{{1
vv(){ nvim "$1"_"$(date '+%F_%H%M%S')"; }
alias vh='nvim $HISTFILE'
alias vb='nvim $HOME/.local/bin'
alias vz='nvim ${ZDOTDIR-$HOME}/.zshrc'
alias vn='nvim $XDG_CONFIG_HOME/nvim/init.lua'
alias va='nvim ${ZDOTDIR-$HOME}/.zshaliases'
alias ve='nvim ${ZDOTDIR-$HOME}/.zshenv'
alias vf='nvim $ZDOTDIR/.zshfunctions'
alias vx='nvim $XDG_CONFIG_HOME/sx/sxrc'
# windscribe {{{1
alias ws='windscribe'
alias wa='doas windscribe start && windscribe connect'
alias wb='windscribe disconnect && doas windscribe stop'
