# Vedant36's zsh aliases
# color hmmmmmm {{{1
alias ls='exa'
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
# imp {{{1
# alias ad='git --git-dir=$HOME/dox/aliedots --work-tree=$HOME'
alias sudo='doas'
alias sudoedit='doas nvim'
alias pls='doas'
alias gh='git add . && git commit -a && git push'
alias linedo="xargs -d '\n' -I {}" 
alias ah='ad commit -a && ad push'
alias l='exa --icons -alhgF'
alias lg='exa -x --icons --git --group-directories-first'
alias v=nvim
alias y='ipython --autocall=2 --nosep'
# Note: replace startx with `exec startx` if wanting to exit shell after logout. hmmm security
alias x='startx |& tee ~/.local/var/log/x.log'
alias path='echo $PATH | tr -s ":" "\n"'
alias pn='ping 1.1.1.1'
alias python='env PYTHONSTARTUP=$XDG_LIB_HOME/python/startup.py python'
# Global {{{1
alias -g noerr='2>/dev/null'
alias -g A='| awk'
alias -g C='| ccze -A'
alias -g CU='| cut'
# alias -g D='| dc'
# alias -g E='| echo'
# alias -g E='| envsubst'
alias -g F='| fzf' # 129
alias -g G='| rg' # 154 # is need for a seperate on for rg -v # 27
alias -g H='| xxd' # 26
alias -g J='| jq' # 26
alias -g L='| less +F'
alias -g N='| nl'
alias -g O='| sort' # 13
alias -g P='| pee'
alias -g S='| sed' # 32
alias -g T='| tr' # 36
alias -g V='| nvim' # 114
alias -g W='| wc -l' # 22
alias -g WR='| wc' # 6
alias -g X='| xargs' # 60 overrides /bin/X
alias -g Y='| py -l' # 17
alias -g Z='| tail'
# xsel/xclip {{{1
alias xip='xsel -ip'
alias xop='xsel -op'
alias xib='xsel -ib'
alias xob='xsel -ob'
# pacman aliases {{{1
alias p='$PM'
alias pf='$PM -F'
alias pg='$PM -S'
alias pp='$PM -Rcns'
alias pi='$PM -S'
alias pq='$PM -Si'
# changing directory conveniences {{{1
alias cb='cd ~/.local/bin'
alias cl='cd ~/dox/CPlus'
alias ct='cd ~/dox/textfiles/'
alias cy='cd ~/dox/Python'
alias cx='cd ~/dox'
# vim editing files {{{1
vv(){ nvim $1_$(date '+%F_%H%M%S'); }
alias vh='nvim $HISTFILE'
alias vb='nvim $HOME/.local/bin'
alias vz='nvim ${ZDOTDIR-$HOME}/.zshrc'
alias vn='nvim $XDG_CONFIG_HOME/nvim/init.vim'
alias va='nvim ${ZDOTDIR-$HOME}/.zshaliases'
alias ve='nvim ${ZDOTDIR-$HOME}/.zshenv'
alias vf='nvim ${ZDOTDIR-$HOME}/.zshfunctions'
alias vx='nvim $XDG_CONFIG_HOME/X11/xinitrc'
# windscribe {{{1
alias ws='windscribe'
alias wa='sudo windscribe start && windscribe connect'
alias wb='windscribe disconnect && sudo windscribe stop'
