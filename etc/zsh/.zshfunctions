# es(explore securely) function to view files securely {{{1
es(){(
	set -e
	pushd $HOME/dox
	local SE=sec
    mkdir -p ~/.local/lib/private
    if [ -s ${SE}.tar.gpg ];then
        gpg -d ${SE}.tar.gpg>${SE}.tar
        [ -s ${SE}.tar ]
        mv ${SE}.tar.gpg ~/.local/lib/private/${SE}-pre.tar.gpg
        tar xf ${SE}.tar && rm ${SE}.tar
        ranger $SE
    fi
	[ -d ${SE} ]
    tar c ${SE} | gpg -r "Vedant Neema" -e>${SE}.tar.gpg
	rm -rf $SE
    cp ${SE}.tar.gpg ~/.local/lib/private/${SE}-post.tar.gpg
	popd
)}
# px: package manager wrapper(s) {{{1
pex() {
	pak=$(($PM -Qem && $PM -Qen) | fzf -n1 --preview "$PM -Qi {1}" --height 100% | cut -d" " -f1 | tr '\n' ' ')
	[ "$pak" ] && eval "$PM -Rcns ${pak% *}"
}
px() {
	pak=$(($PM -Qm && $PM -Qn) | fzf -n1 --preview "$PM -Qi {1}" --height 100% | cut -d" " -f1 | tr '\n' ' ')
	[ "$pak" ] && eval "$PM -Rcns ${pak% *}"
}
# extract directory {{{1
exdir(){
  for i in $@;do
    [[ -d $i ]] && mv $i/*(D) . && rmdir $i
  done
}
