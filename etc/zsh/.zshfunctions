# to swap a string with another {{{1
swap(){
	read -d^D asd
	asd=$(sed "s/$1/\x0\x0/g" <<<"$asd")
	asd=$(sed "s/$2/$1/g" <<<"$asd")
	asd=$(sed "s/\x0\x0/$2/g" <<<"$asd")
	printf $asd
}
