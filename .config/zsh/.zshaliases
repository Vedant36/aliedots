# apt (to be changed to pacman later ig) {{{1
alias a='sudo apt update && [ $(apt list --upgradable 2>/dev/null | wc -l) -gt 1 ] && sudo apt upgrade -y && sudo apt autoremove -y'
alias aa='sudo apt autoremove -y'
alias aud='sudo apt update'
alias aug='sudo apt upgrade -y'
alias ai='sudo apt install -y'
alias al='apt list'
alias ap='sudo apt purge -y'
alias aq='apt search'
alias as='apt show'
