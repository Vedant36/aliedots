# es(explore securely) function to view files securely {{{1
es(){(
	set -e
	cd $HOME/dox
	local SE=sec
	gpg -d ${SE}.tar.gpg>${SE}.tar && rm ${SE}.tar.gpg
	tar xf ${SE}.tar && rm ${SE}.tar
	ranger $SE
	tar c ${SE} | gpg -r "Vedant Neema" -e>${SE}.tar.gpg
	rm -rf $SE
)}
# package manager wrappers {{{1
px() {
	pak=$($PM -Qn | fzf -n1 --preview "$PM -Qi {1}" --height 100%)
	[ "$pak" ] && $PM -Rns ${pak% *}
}
# extract directory {{{1
exdir(){
  for i in $@;do
    [[ -d $i ]] && mv $i/*(D) . && rmdir $i
  done
}
