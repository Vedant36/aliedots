#!/bin/sh

# builtin default config
userresources=$XDG_CONFIG_HOME/X11/Xresources
# usermodmap=$XDG_CONFIG_HOME/X11/Xmodmap
[ -f $userresources ] && xrdb $userresources
# [ -f $usermodmap ] && xmodmap $usermodmap
# start some nice programs
[ -d /etc/X11/xinit/xinitrc.d ] && for f in /etc/X11/xinit/xinitrc.d/?*.sh ; do
	[ -x "$f" ] && . "$f"
done
unset f

# custom config
# keyboard
setxkbmap -option altwin:swap_alt_win -option ctrl:nocaps
# for another mod key
# clear mod3
# keysym F8 = Hyper_R
xset r rate 200 200
# pointer(s)
xset m 4 0
# xsetroot -cursor_name left_ptr

# startup programs
#type unclutter>/dev/null && unclutter -idle 1 -root -jitter 40
#artha &
feh --no-fehbg --bg-fill "$HOME/pix/wallpapers/animebuilders-re.jpg"
dunst &
picom -f &
while xsetroot -name "$(bar.sh)"
do
	sleep 1m
done &

exec dwm &>$HOME/.local/var/log/dwm.log

