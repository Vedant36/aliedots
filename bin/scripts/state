#!/usr/bin/bash
# script to manage on and off states for things like {picom, wallpape reload, xss-lock, xcape, unclutter}
choice=$(echo "\
xcape $(pgrep xcape | wc -l)
xss-lock $(pgrep xss-lock | wc -l)
unclutter $(pgrep unclutter | wc -l)
wallpaper
dpms $(xset q | grep -Po 'DPMS is \K\S+')
picom
dunst
" | dmenu -l 20)

case $choice in
	xcape*)
		if pgrep xcape; then
			pkill xcape
		else
			xcape -e 'Control_L=Escape'
		fi
		;;
	xss-lock*)
		if pgrep xss-lock; then
			pkill xss-lock
		else
			xss-lock -n 'bright -i -5' -l lock
		fi
		;;
	unclutter*)
		if pgrep unclutter;then
			pkill unclutter
		else
			type unclutter>/dev/null && unclutter --timeout 2 --jitter 40 --start-hidden --ignore-scrolling &
		fi
		;;
	wallpaper)
		feh --no-fehbg --bg-fill "$(xdg-user-dir PICTURES)"/current.*
		;;
    dpms*)
        if [ "$(xset q | grep -Po 'DPMS is \K\S+')" == "Enabled" ]; then
            xset -dpms
        else
            xset +dpms
        fi
        ;;
	picom)
		if pgrep picom; then
			pkill picom
		else
			picom --experimental-backends
		fi
		;;
    dunst)
        pkill dunst && dunst &!
        ;;
esac

