#!/usr/bin/env sh
## Simple event reminder
## Written by Vedant36
## Format:
##     <date>=<summary>=<body>
## Crontab:
##     */5 * * * * "$HOME"/.local/bin/scripts/event
## Update 1.1 on 2022-01-31: made better

# when calling from crontab, need to export this to make notify-send work
export DBUS_SESSION_BUS_ADDRESS=unix:path=/run/user/$(id -u)/bus

cutter(){
	field="$1"
	shift
	echo "$@" | cut -d= -f"$field"
}

grep -vE '(^/\*.*\*/|^$)' "$HOME"/.local/lib/dotfiles/event.log | \
	while read -r i;do
	# send a notification if $i is greater than today's date in epoch time
	if [ "$(date +%s)" -gt "$(date +%s -d "$(cutter 1 "$i")")" ];then
		# a space after the summary allows sending the notification even when
		# no second field is specified
		notify-send -u critical "$(cutter 2 "$i"| xargs) " "$(cutter 1,3- "$i")"
	fi
done

